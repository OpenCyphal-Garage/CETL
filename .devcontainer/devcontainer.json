{
    "name": "linux development environment",
    "image": "ghcr.io/opencyphal/toolshed:ts20.4.1",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "twxs.cmake",
                "ms-vscode.cmake-tools",
                "ban.spellright",
                "xaver.clang-format"
            ]
        }
    },
    "workspaceFolder": "/repo",
    "workspaceMount": "source=${localWorkspaceFolder},target=/repo,type=bind,consistency=delegated",
    "mounts": [
        "source=root-vscode-server,target=/root/.vscode-server/extensions,type=volume",
        "source=cmake,target=/repo/cetlvast/build_vscode,type=volume"
    ]
}
